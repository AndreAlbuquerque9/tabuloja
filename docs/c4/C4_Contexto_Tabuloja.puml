@startuml C4_Contexto_Tabuloja
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

LAYOUT_WITH_LEGEND()

title Diagrama de Contexto do Sistema - Tabuloja

Person(cliente, "Cliente da Loja", "Pessoa que deseja alugar jogos de tabuleiro.")
Person(admin, "Administrador", "Funcionário que gerencia o catálogo e os pedidos.")

System(tabuloja, "Sistema Tabuloja", "Plataforma de aluguel e venda de jogos de tabuleiro.")

System_Ext(gateway_pagamento, "Gateway de Pagamento", "Processa as transações financeiras dos aluguéis.")
System_Ext(servico_email, "Serviço de E-mail", "Envia e-mails de notificação, como a confirmação de um pedido.")

Rel(cliente, tabuloja, "Realiza o aluguel de jogos através da API")
Rel(admin, tabuloja, "Gerencia o catálogo de jogos e pedidos")

Rel(tabuloja, gateway_pagamento, "Processa pagamentos", "HTTPS/JSON")
Rel(tabuloja, servico_email, "Envia notificações de pedidos", "HTTPS/JSON")

@enduml